<div class="grp-parent">
  <div class="grp-heading">
    <p>
      Your College Group is <strong>
        <%= @group.name %></strong>. Members in your group are :
    </p>
  </div>
  <div class="grp-main-content">
    <div class="grp-feed">
      <% @group.users.each do |user| %>
      <div class="grp-feed-child">
        <div class="grp-child">
          <div>
            <%= image_tag ("profilepic.jpg"), class: "profile-pic-img" %>
          </div>
          <div class="grp-child-content">
            <p class="grp-child-name">
              <a href=<%=user.linkedin%>>
                <%= user.name %></a>
            </p>
            <p>
              <%= user.company %>
            </p>
            <div class="grp-graduate">
              <p><i>Graduation year&nbsp</i></p>
              <p>
                <i>
                  <%=  user.graduation %></i>
              </p>
              <p>
                <% unless current_user == user %>
                <%= link_to 'Send message', new_message_path(to: user.id), class: 'btn btn-default btn-sm' %>
                <% end %>
              </p>
            </div>

          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>

</div>