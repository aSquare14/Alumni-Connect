<div id="single-post-content" class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="posted-by">Posted by
        <%= @post.user.name %>
      </div>
      <h3>
        <%= @post.title %>
      </h3>
      <p>
        <%= @post.content %>
      </p>
    </div>
    <div>
      <h3>Comments</h2>
        <% @post.comments.each do |comment| %>
        <p>
          <b>Commenter:</b>
          <%= comment.commenter %>
        </p>

        <p>
          <b>Comment:</b>
          <%= comment.body %>
        </p>
        <% end %>
        <h1>Add a comment:</h1>
        <%= form_for([@post, @post.comments.build]) do |f| %>
          <div class="field">
              
          <%= f.label :commenter %><br />
              
          <%= f.text_field :commenter %>
            </div>
          <div class="field">
              
          <%= f.label :body %><br />
              
          <%= f.text_area :body %>
            </div>
          <div class="actions">
              
          <%= f.submit %>
            </div>
        <% end %>
    </div>
  </div><!-- row -->
</div>